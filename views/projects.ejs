<%- include("partials/header") %>

<div class="container">
    <div class="jumbotron">
        <h1>Projects</h1>
        <% if(currentUser) { %>
        <a class="btn btn-success mt-5" href="/projects/new">Upload New Project</a> 
        <% } %>
    </div>
    <div class="row">
        <% projects.forEach((project) => { %>
        <div class="col-md-4 col-12 mb-3">
            <div class="card cardProperty">
                <img class="card-img-top cardImg rounded border" src="<%= project.image %>" alt="">
                <div class="card-body">
                    <h4 class="card-title"><%= project.title %></h4>
                        <% if(project.description.length < 15){ %>
                            <p><%= project.description.substring(0, 15) %></p>
                        <% } else { %>
                            <p><%= project.description.substring(0, project.description.indexOf(" ", 15)) %>...</p>
                        <% } %>
                    <a href="/projects/<%= project._id %>">More Info</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>


<%- include("partials/footer") %>