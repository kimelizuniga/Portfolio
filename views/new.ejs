<%- include("partials/header") %>

<div class="container-fluid w-50 mt-4">
    <h3>Create New Project</h3>
    <form action="/projects" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" placeholder="My Project" name="title">
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" placeholder="url" name="image" id="image">
        </div>
        <div class="form-group">
            <label for="link">Link</label>
            <input class="form-control" type="text" placeholder="url" name="link">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input class="form-control" type="text" placeholder="Project description" name="description">
        </div>
        <div class="text-center">
            <button class="btn btn-success" type="submit">Submit</button>
        </div>
    </form>
</div>


<%- include("partials/footer") %>